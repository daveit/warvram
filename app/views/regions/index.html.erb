<div class="row">
  <div class="col-xs-6 col-sm-4 col-md-8">

    <p id="notice"><%= notice %></p>

    <h1>Listing Regions</h1>

    <div class="media">
      <div class="media-body">
        <table class="table table-hover">
          <thead>
          <tr>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @regions.each do |region| %>
              <tr>
                <td><%= region.name %></td>
                <td><%= link_to 'Show', region %></td>
                <td><%= link_to 'Edit', edit_region_path(region) %></td>
                <td><%= link_to 'Destroy', region, method: :delete, data: {confirm: 'Are you sure?'} %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <%= link_to 'New Region', new_region_path, :class => "btn btn-small btn-primary" %>
    <hr>
  </div>
</div>