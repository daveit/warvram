<p id="notice"><%= notice %></p>

<h1>Listing Pay Types</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @pay_types.each do |pay_type| %>
          <tr>
            <td><%= pay_type.name %></td>
            <td><%= link_to 'Show', pay_type %></td>
            <td><%= link_to 'Edit', edit_pay_type_path(pay_type) %></td>
            <td><%= link_to 'Destroy', pay_type, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>


<br>

