<%= simple_form_for(@vreceipt) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :rdate %>
    <%= f.input :reference %>
    <%= f.input :finto %>
    <%= f.input :details %>
    <%= f.association :village %>
    <%= f.association :pay_type %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
