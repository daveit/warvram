<p id="notice"><%= notice %></p>

<h1>Listing Individuals</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Title</th>
        <th>First</th>
        <th>Last</th>
        <th>Address</th>
        <th>Suburb</th>
        <th>Phone</th>
        <th>Financial to</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @individuals.each do |individual| %>
          <tr>
            <td><%= individual.title.name %></td>
            <td><%= individual.first %></td>
            <td><%= individual.last %></td>
            <td><%= individual.address1 %></td>
            <td><%= individual.suburb %></td>
            <td><%= individual.phone %></td>
            <td><%= individual.financial_to %></td>
            <td><%= individual.status.name %></td>
            <td><%= link_to 'Show', individual, :class => "btn btn-small btn-info" %></td>
            <td><%= link_to 'Edit', edit_individual_path(individual), :class => "btn btn-small btn-success" %></td>
            <td><%= link_to 'Destroy', individual, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-small btn-danger" %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<%= link_to 'New Individual', new_individual_path, :class => "btn btn-small btn-primary" %>

<h3>Import Individual Members</h3>
<%= form_tag import_individuals_path, multipart: true do %>
    <%= file_field_tag :file %>
    <br>
    <%= submit_tag "Upload Individuals CSV File", :class => "btn btn-small btn-success" %>
<% end %>
<br>
