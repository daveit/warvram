<p id="notice"><%= notice %></p>

<h1>Listing Positions</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @positions.each do |position| %>
      <tr>
        <td><%= position.name %></td>
        <td><%= link_to 'Show', position, :class => "btn btn-small btn-info" %></td>
        <td><%= link_to 'Edit', edit_position_path(position), :class => "btn btn-small btn-success" %></td>
        <td><%= link_to 'Destroy', position, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-small btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
  </div>

