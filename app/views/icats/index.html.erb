<p id="notice"><%= notice %></p>

<h1>Listing Individual Categories</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @icats.each do |icat| %>
          <tr>
            <td><%= icat.name %></td>
            <td><%= link_to 'Show', icat %></td>
            <td><%= link_to 'Edit', edit_icat_path(icat) %></td>
            <td><%= link_to 'Destroy', icat, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<%= link_to 'New Category', new_icat_path, :class => "btn btn-small btn-primary" %>
