<div class="row">
  <div class="col-xs-10 col-sm-8 col-md-10">

    <p id="notice"><%= notice %></p>

    <h1>Listing Notices</h1>

    <div class="media">
      <div class="media-body">
        <table class="table table-hover">
          <thead>
          <tr>
            <th>Title</th>
            <th>Notes</th>
            <th>Finalised</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @notices.each do |notice| %>
              <tr>
                <td><%= notice.title %></td>
                <td><%= notice.notes %></td>
                <td><%= check_box "", "", {:checked => notice.finalised, :disabled => true} %></td>
                <td><%= link_to 'Show', notice, :class => "btn btn-small btn-info" %></td>
                <td><%= link_to 'Edit', edit_notice_path(notice), :class => "btn btn-small btn-success" %></td>
                <td><%= link_to 'Destroy', notice, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-small btn-danger" %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <br>

    <%= link_to 'New Notice', new_notice_path, :class => "btn btn-small btn-success" %>

  </div>
</div>
